<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrim_dark"
    style="@style/ScrimDark">

    <!--above 1-->
    <View
        android:translationY="-20dp"
        android:transitionName="above1"
        style="@style/TransitionView"/>

    <!--above 2-->
    <View
        android:translationY="-40dp"
        android:transitionName="above2"
        style="@style/TransitionView"/>

    <!--above 3-->
    <View
        android:translationY="-60dp"
        android:transitionName="above3"
        style="@style/TransitionView"/>

    <!--bottom 1-->
    <View
        android:translationY="20dp"
        android:transitionName="bottom1"
        android:layout_gravity="bottom"
        style="@style/TransitionView"/>

    <!--bottom 2-->
    <View
        android:translationY="40dp"
        android:transitionName="bottom2"
        android:layout_gravity="bottom"
        style="@style/TransitionView" />

    <!--bottom 3-->
    <View
        android:translationY="60dp"
        android:transitionName="bottom3"
        android:layout_gravity="bottom"
        style="@style/TransitionView"/>

    <ImageView
        android:id="@+id/back"
        style="@style/BackButton" />

    <TextView
        android:layout_marginStart="64dp"
        style="@style/MainHeader"/>

    <View
        android:id="@+id/scrim_accent"
        style="@style/ScrimAccent"/>

    <View
        android:id="@+id/rootBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:elevation="6dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/white"/>

    <!--margin top = margin 90 (main activity) - 16(first item top margin)-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:elevation="6dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/journeyName"
            tools:text="Viaggio1"
            android:maxLines="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>

        <olog.dev.leeto.ui.custom_view.RoundedMapView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:background="@color/dark_grey"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/journeyName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1.7"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            app:layout_constraintTop_toBottomOf="@+id/inkIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <olog.dev.leeto.ui.custom_view.InkPageIndicator
            android:id="@+id/inkIndicator"
            app:layout_constraintTop_toBottomOf="@id/map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:dotDiameter="5dp"
            app:dotGap="9dp"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addStop"
        style="@style/AddFab"/>

</android.support.design.widget.CoordinatorLayout>

